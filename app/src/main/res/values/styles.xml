<resources>

    <style name="Theme.Material3" parent="Theme.Material3.DynamicColors.DayNight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.roundedImageView" parent="">
        <item name="cornerSize">10%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.circleImageView" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <!-- Showcase Theme -->
    <style name="CustomShowcaseTheme" parent="ShowcaseView">
        <item name="sv_backgroundColor">#A0000000</item>
        <item name="sv_showcaseColor">@color/colorPrimary</item>
        <item name="sv_buttonText">Close</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle</item>
        <item name="sv_detailTextAppearance">@style/CustomText</item>
    </style>

    <style name="CustomTitle" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="CustomText" parent="TextAppearance.ShowcaseView.Detail.Light">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

</resources>
